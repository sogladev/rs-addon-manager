{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "addon-manager",
    "version": "0.2.12",
    "identifier": "com.github.sogladev.addon-manager",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Addon Manager",
                "width": 960,
                "height": 900
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["msi"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "createUpdaterArtifacts": true
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE5MDU2ODE2RDVCREU5QzkKUldUSjZiM1ZGbWdGcVlsZUs1Z0hFN3VPblYvQjlhdEIwUERLazQ1TXE2bFc4QXdUUWJpanVBWm0K",
            "endpoints": [
                "https://github.com/sogladev/rs-addon-manager/releases/latest/download/latest.json"
            ]
        }
    }
}
